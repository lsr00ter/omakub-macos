# File system
alias ls='eza -lh --group-directories-first --icons=auto'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ff="fzf --preview 'bat --style=numbers --color=always {}'"
alias fd='fd'  # macOS uses fd instead of fdfind
alias cd='z'

# Directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Tools
alias n='nvim'
alias g='git'
alias d='docker'
alias r='rails'
alias bat='bat'  # macOS uses bat instead of batcat
alias lzg='lazygit'
alias lzd='lazydocker'

# Git
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias gcad='git commit -a --amend'

# macOS-specific aliases
alias show='open'  # macOS equivalent of xdg-open
alias copy='pbcopy'
alias paste='pbpaste'
alias refresh='source ~/.zshrc'

# Homebrew
alias brewup='brew update && brew upgrade'
alias brewclean='brew cleanup'
alias brewdeps='brew deps --tree'

# System information
alias cpu='sysctl -n machdep.cpu.brand_string'
alias mem='vm_stat'
alias disk='df -h'

# Network
alias ip='curl -s ipinfo.io/ip'
alias localip='ipconfig getifaddr en0'
alias ports='netstat -tuln'

# Quick edit configs
alias zshconfig='nvim ~/.zshrc'
alias omakubconfig='nvim ~/.local/share/omakub-macos/defaults/zsh/rc'